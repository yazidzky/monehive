{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": null,
  "functions": {
    "api/index.php": {
      "runtime": "@vercel/php"
    }
  },
  "routes": [
    { "src": "/build/(.*)", "dest": "/public/build/$1" },
    { "src": "/images/(.*)", "dest": "/public/images/$1" },
    { "src": "/favicon.ico", "dest": "/public/favicon.ico" },
    { "src": "/robots.txt", "dest": "/public/robots.txt" },
    { "src": "/manifest.json", "dest": "/public/manifest.json" },
    { "src": "/service-worker.js", "dest": "/public/service-worker.js" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "installCommand": "composer install --no-dev --prefer-dist --optimize-autoloader && npm ci",
  "buildCommand": "php artisan config:cache && php artisan route:cache && php artisan view:cache && npm run build"
}
